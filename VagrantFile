
Vagrant.configure("2") do |config|
  config.vm.box = "ubuntu/jammy64"
  #Descomentar a linha abaixo caso esteja dando erro de certificado ao baixar a imagem
  #config.vm.box_download_insecure=true
  config.vm.provider "virtualbox" do |vb|
  end

config.vm.define "ansible" do |ansible|
  ansible.vm.provider "virtualbox" do |vb|
    vb.memory = 512
    vb.cpus = 1
    vb.name = "ansible"
    ansible.vm.network "public_network", ip: "$(Seu_Ip)"
    ansible.vm.synced_folder ".", "/vagrant"
    ansible.vm.provision "shell", inline: "bash /vagrant/script.sh"
  end
end
end
